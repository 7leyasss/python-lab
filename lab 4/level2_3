 
import numpy as np

# Создание матрицы
A = np.random.randint(-10, 10, size=(10, 5))

# Нахождение максимальных элементов в каждом столбце
max_indices = np.argmax(A, axis=0)

# Определение, находятся ли максимальные элементы в первой половине столбца
first_half_max_indices = max_indices < len(A) // 2

# Замена первого элемента столбца суммой элементов столбца, расположенных после максимального элемента, если максимальный элемент находится в первой половине столбца
for i in range(len(A[0])):
    if first_half_max_indices[i]:
        A[:, i][0] = np.sum(A[:, i][max_indices[i]:])

print("Исходная матрица:")
print(A)

print("Преобразованная матрица:")
print(A)
 
